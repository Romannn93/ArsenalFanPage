@model Match

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete a Match</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Team1"></label>
			<input asp-for="Team1" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Team2"></label>
			<input asp-for="Team2" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="LogoTeam1"></label>
			<input asp-for="LogoTeam1" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="LogoTeam2"></label>
			<input asp-for="LogoTeam2" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="DateTime"></label>
			<input asp-for="DateTime" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Stadium"></label>
			<input asp-for="Stadium" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Score"></label>
			<input asp-for="Score" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Scorers"></label>
			<input asp-for="Scorers" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="League"></label>
			<input asp-for="League" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-primary" style="width: 150px">Delete</button>
		<a asp-controller="Match" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}