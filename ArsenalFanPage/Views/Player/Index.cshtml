@model IEnumerable<Player>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Player List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Player" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Player
            </a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                Date and place of birth
            </th>
            <th>
                Field position
            </th>
            <th>
                Previous clubs
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DateOfBirth
                </td>
                <td width="10%">
                    @obj.Position
                </td>
                <td width="40%">
                    @obj.PreviousClubs
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Player" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Player" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

